<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>Task Master!</h1>
        </div>
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each task_data}}
                    {{#unless this.complete}}
                <div class="col-xs-9 text-center">
                    <pre>{{this.id}}. {{this.task_name}}</pre>
                </div>
            <div class="col-xs-3 text-center">
                <form method="POST" action="/tasks/update?_method=PUT" class="button-size">
                    <input type="hidden" name="task_id" type="text" value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-default">NAILED IT!</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
            </div>  
        </div>

        <div class="col-xs-6 text-center" class="task">
            {{#each task_data}}
                {{#if this.complete}}
                    <input class="form-control" type="text" placeholder="{{this.id}}. {{this.task_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div> 
<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
        <form action="/tasks/create" method="POST">
            <input type="text" name="task_name" class="form-control" value="" id="enter_text">
            <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
        </form>
        <p>Add tasks to your Task Master here!</p>
        </div>
    </div>
</div>